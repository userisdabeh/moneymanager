<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green">

    <!-- Title ribbon -->
    <LinearLayout
        android:id="@+id/titleRibbon_intgct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bk2Itag"
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:background="@color/black"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:text="b"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tgct_tRbn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/black"
            android:gravity="center_vertical|start"
            android:paddingStart="16dp"
            android:text="Customize Tags: Income"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp" />
    </LinearLayout>

    <!--edit tag input-->
    <LinearLayout
        android:id="@+id/edit_iTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iTag_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/clrgry" />

        <EditText
            android:id="@+id/itagNameInput"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="Enter tag name"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout> <!--end of edit tag input-->

    <!-- Expense and Income buttons -->
    <LinearLayout
        android:id="@+id/IncExpButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <Button
            android:id="@+id/expenseButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Expense"
            android:textAllCaps="false"
            android:textColor="@color/white"/>

        <View
            android:id="@+id/incExpSpacer"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

        <Button
            android:id="@+id/incomeButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Income"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- tag buttons -->
    <GridLayout
        android:id="@+id/incTagGrid_ct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/education"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/greyedu"
            />

        <Button
            android:id="@+id/food"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/greyfood"
            />

        <Button
            android:id="@+id/leisure"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/greyles" />

        <Button
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:textSize="24sp"
            android:background="@drawable/greyhome"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/transpo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:background="@drawable/greytranspo" />

        <Button
            android:id="@+id/moretags"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:text="..."
            android:textSize="24sp"
            android:background="@drawable/clrgry"
            android:textColor="@color/black" />
    </GridLayout> <!--end of tag buttons-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--color choices-->
    <LinearLayout
        android:id="@+id/incClrChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        >

        <Button
            android:id="@+id/ich_blue"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_columnWeight="1"
            android:background="@drawable/clrblu" />

        <Button
            android:id="@+id/ich_red"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_columnWeight="1"
            android:background="@drawable/clrred" />

        <Button
            android:id="@+id/ich_green"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_columnWeight="1"
            android:background="@drawable/clrgrn" />

        <Button
            android:id="@+id/ich_yellow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_columnWeight="1"
            android:background="@drawable/clrylw" />

        <Button
            android:id="@+id/ich_orange"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_columnWeight="1"
            android:background="@drawable/clrorg" />

        <Button
            android:id="@+id/ich_grey"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_columnWeight="1"
            android:background="@drawable/clrgry" />
    </LinearLayout> <!--end of color choices-->

    <Button
        android:id="@+id/incAddButton"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:text="Add"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <!-- Include bottom ribbon -->
    <com.mobdeve.s17.grp13.gagala_abanes.moneymanager.BottomRibbon
        android:id="@+id/bottomRibbon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
